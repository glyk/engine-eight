{
    "name": "drupal-tome/netlify-template",
    "description": "A Netlify template for Tome.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Samuel Mortenson",
            "email": "samuel@mortenson.coffee"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/core": "~8.5",
        "drush/drush": "^9.0.0",
        "drupal/tome": "^1.0",
        "drupal-tome/tome_drush": "dev-master",
        "drupal/admin_toolbar": "^1.27",
        "drupal/admin_toolbar_tools": "^1.27",
        "drupal/adminimal_admin_toolbar": "^1.9",
        "drupal/adminimal_theme": "^1.5",
        "drupal/build_hooks": "^2.2",
        "drupal/config_direct_save": "^1.0",
        "drupal/devel": "^2.1",
        "drupal/menu_trail_by_path": "^1.1",
        "drupal/metatag": "^1.8",
        "drupal/pathauto": "^1.4",
        "drupal/tome_netlify": "1.x-dev"
    },
    "scripts": {
        "symlink": "./scripts/symlink.sh",
        "post-install-cmd": [
            "@composer drupal:scaffold",
            "@symlink"
        ],
        "post-update-cmd": [
            "@composer drupal:scaffold",
            "@symlink"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"]
        }
    }
}
